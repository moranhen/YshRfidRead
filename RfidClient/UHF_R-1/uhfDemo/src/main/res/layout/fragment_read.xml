<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ReadFragment">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/read_etRead"
            app:layout_constraintBottom_toBottomOf="@id/read_etRead"
            android:id="@+id/tvData"
            android:textSize="22sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data" />
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvData"
            android:id="@+id/read_etRead"
            android:layout_width="0dp"
            android:singleLine="true"
            android:textSize="22sp"
            android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/read_etRead"
            android:background="@color/cardview_dark_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/read_etRead"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/read_bdName"
            android:id="@+id/read_bdData"
            android:text="名称:"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/read_bdData"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/read_bdData"
            android:id="@+id/read_bdName"
            android:textSize="22sp"
            android:singleLine="true"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/read_bdName"
            android:background="@color/cardview_dark_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/read_bdName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/read_kindtext"
            android:id="@+id/read_kind"
            android:text="种类:"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/read_kind"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/read_kind"
            android:id="@+id/read_kindtext"
            android:textSize="22sp"
            android:singleLine="true"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/read_kind"
            android:background="@color/cardview_dark_background"/>
        <Button
            app:layout_constraintTop_toBottomOf="@id/read_kindtext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:id="@+id/read_btnRead"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/read" />
        <Button
            app:layout_constraintTop_toBottomOf="@id/read_btnRead"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/read_btnbind"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            android:text="开始检测" />
        <ImageView
            android:layout_width="240dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/read_btnbind"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/sig0"
            android:id="@+id/read_Image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




