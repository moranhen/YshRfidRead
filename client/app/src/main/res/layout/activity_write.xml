<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mTooBar"
        android:layout_width="0dp"
        android:background="@color/purple_500"
        android:layout_height="wrap_content"
        app:collapsedTitleGravity="center"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:titleMargin="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:id="@+id/mt_text"/>
    </androidx.appcompat.widget.Toolbar>
    <EditText
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="48dp"
        android:id="@+id/write_epc"
        android:hint="芯片录入"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/mTooBar"
        app:layout_constraintBottom_toTopOf="@id/write_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/write_epc_clear"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/write_epc_clear"
        android:text="清空"
        app:layout_constraintTop_toTopOf="@id/write_epc"
        app:layout_constraintStart_toEndOf="@id/write_epc"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:layout_width="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="48dp"
        android:id="@+id/write_edit"
        android:hint="输入名称"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/write_epc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/write_confirm"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/write_confirm"
        android:layout_marginEnd="4dp"
        android:text="确认写入"
        app:layout_constraintTop_toTopOf="@id/write_clear"
        app:layout_constraintBottom_toBottomOf="@id/write_clear"
        app:layout_constraintEnd_toStartOf="@id/write_clear"
        app:layout_constraintStart_toEndOf="@id/write_edit"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/write_clear"
        android:text="清空"
        app:layout_constraintStart_toEndOf="@id/write_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/write_edit"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/write_num"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="18dp"
        android:hint="写入数量"
        android:singleLine="true"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/write_num_btn"
        app:layout_constraintTop_toBottomOf="@id/write_edit"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/write_num_btn"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toTopOf="@id/write_num"
        app:layout_constraintStart_toEndOf="@id/write_num"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="确认数量"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_liner"
        app:layout_constraintTop_toBottomOf="@id/write_num"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示写入进度:"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:padding="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginStart="8dp"
            android:text="0"
            android:id="@+id/write_had_num"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /"
            android:padding="6dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ?"
            android:textSize="18sp"
            android:padding="6dp"
            android:id="@+id/write_total_num"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/write_rec"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/write_liner"
        app:layout_constraintBottom_toTopOf="@+id/write_submit"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/write_submit"
        app:layout_constraintHorizontal_weight="1"
        android:padding="8dp"
        android:text="确认写入"
        app:layout_constraintTop_toBottomOf="@id/write_rec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>